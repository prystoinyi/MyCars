@using MyCars.ViewModels
@model CreateUserInfoViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Registration</legend>

        <div class="editor-label"><b>Name</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserInfo.FirstName)
        </div>

        <div class="editor-label"><b>Surname</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserInfo.LastName)
        </div>

        <div class="editor-label"><b>Middle Name</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserInfo.middleName)
        </div>

        <div class="editor-label"><b>Phone Number</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserInfo.PhoneNumber)
        </div>

        <div class="editor-label"><b>Choose a car model</b></div>
        <div class="editor-field">
            @Html.DropDownList("Name", ViewBag.Brands as SelectList, new { id = "brand" })
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TypeCarId, new SelectList(ViewBag.Types, "Id", "Name"), new { id = "TypeCarId" })

        </div>

        <div class="editor-label"><b>Car Number</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserInfo.CarNumber)
        </div>

        <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
    $(function () {

        $('#brand').change(function()
        {
            var idd = $(this).val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetItems")/' + idd,
                success: function (data) {

                    $('#TypeCarId').replaceWith(data);
                }
            });
        });
    })
    </script>
}